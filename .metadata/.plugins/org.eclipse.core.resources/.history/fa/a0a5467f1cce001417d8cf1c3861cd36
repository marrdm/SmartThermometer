#ifndef UART_H_
#define UART_H_

#ifdef __USE_CMSIS
#include "LPC11xx.h"
#endif

#define UART_TX_BUB_SIZE 32
int uart_tx_buf_start = 0;
int uart_tx_buf_end = 0;
char uart_tx_buf[UART_TX_BUB_SIZE];

int uart_tx_active = 0;


void uart_init();
int uart_send(char str[], int len);
void uart_transmit();
void UART_IRQHandler (void);


#endif /* UART_H_ */
